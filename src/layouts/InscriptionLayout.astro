---
import Arrow from "../components/icons/arrow.astro";
---

<!DOCTYPE html>
<html class="scroll-smooth" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/images/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<link
			rel="preload"
			href="/fonts/Lexend.woff2"
			as="font"
			type="font/woff2"
			crossorigin="anonymous"
		/>
		<title>Inscription</title>
	</head>
	<body style="font-family: lexend;">
		<section class="px-12 py-6 bg-[#1e1e2c] w-screen fixed top-0 lg:py-8">
			<div class="text-white max-w-7xl m-auto flex justify-between">
				<a href="/">
					<Arrow className="h-6 rotate-180" />
				</a>
			</div>
		</section>
		<slot />
	</body>
	<script src="../../node_modules/flowbite/dist/flowbite.min.js"></script>
</html>

<style is:global>
	@font-face {
		font-family: "Lexend";
		src: url("/fonts/Lexend.woff2") format("woff2");
	}
</style>
